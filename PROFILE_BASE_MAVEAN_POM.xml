<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>Encryption</groupId>
	<artifactId>Encryption</artifactId>
	<version>v1</version>
	<name>Encryption</name>
	<description>Encryption</description>

	<profiles>
		<profile>
			<id>DEV</id>
			<activation><activeByDefault>true</activeByDefault></activation>
			<build>
				<finalName>${project.artifactId}</finalName>
				<plugins>

					<!-- copy-and-rename-Multiple-files -->
				    <plugin>
						<groupId>com.coderplus.maven.plugins</groupId>
						<artifactId>copy-rename-maven-plugin</artifactId>
						<version>1.0</version>
						<executions>
							<execution>
								<id>copy-and-rename-file</id>
								<phase>compile</phase>
								<goals>
									<goal>rename</goal>
								</goals>
								<configuration>
									<fileSets>
										<!-- Multiple fileSet Can add -->
						        <fileSet>
										  <sourceFile>${project.build.directory}/classes/ASP/DB_SCRIPT.sql</sourceFile>
										  <destinationFile>${project.build.directory}/classes/DB_SCRIPT/DB_SCRIPT.sql</destinationFile>
						        </fileSet>

                    
                    
						       </fileSets>
								</configuration>
							</execution>
						</executions>
					</plugin>

					<!-- Add all file which is used -->
					<plugin>
			            <groupId>org.apache.maven.plugins</groupId>
			            <artifactId>maven-jar-plugin</artifactId>
			            <configuration>
							<includes>
		                		<include>application.properties</include>
		                		<include>**/DB_SCRIPT/DB_SCRIPT.sql</include>
		                		<include>**/SSL/einv_file.pem</include>
		                		<include>**/SSL/wildcard_go4gst_com.jks</include>
		                		<include>**/static/bg.gif</include>
		                		<include>**/templates/index.html</include>
		                		<include>**/com/go4gst/EinvGspAppApplication.class</include>
		                		<include>**/com/go4gst/ServletInitializer.class</include>
		                		<include>**/com/go4gst/setup/*.class</include>
		                		
		                		<!-- ASP Configuration -->
		                		<include>**/com/go4gst/setup/multi/tenent/*.class</include>
		                		<include>**/com/go4gst/asp/**/*.class</include>
		                		<include>**/com/go4gst/gsp/**/*.class</include>
		                		<include>**/com/go4gst/amazone/**/*.class</include>		
							</includes>
			            </configuration>
		        	</plugin>
					<plugin>
						<groupId>org.springframework.boot</groupId>
						<artifactId>spring-boot-maven-plugin</artifactId>
						<configuration>
				            <jvmArguments>
				                -Xms512m
				                -Xmx1024m
				            </jvmArguments>
							<excludes>
								<exclude>
									<groupId>org.projectlombok</groupId>
									<artifactId>lombok</artifactId>
								</exclude>
								<exclude>
									<groupId>org.springframework.boot</groupId>
									<artifactId>spring-boot-devtools</artifactId>
								</exclude>
							</excludes>
							<mainClass>com.go4gst.EinvGspAppApplication</mainClass>
							<outputDirectory>E:\\Deploy</outputDirectory>
						</configuration>
						<executions>
		                	<execution>
		                    	<goals>
		                        	<goal>repackage</goal>
		                    	</goals>
		                	</execution>
		            	</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
